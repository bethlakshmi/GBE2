{% extends "base.tmpl" %}
{% load staticfiles %}
{% block title %}
  Great Burlesque Exposition 
{% endblock %}
{% block content %}
<h2 class="subtitle">Edit Ticket Items</h2>
<p class="font_large">Click on a type of ticket to edit or delete it, or click the button below to
add.</p>
<p class="font_regular">
Note:  The Show to Public flag below indicates of the ticket item is displayed
to end users.  By default it is "false".</p>
<p class="font_regular">To add a new ticket item, <a href={% url 'ticketing:ticket_item_edit' %}> click here</a>.
</p>

{% if ticket_items|length > 0 %}

<table border=1> <tr class="font_large">
  <th>Ticket Item Id</th>
  <th>Title</th>
  <th>Description</th>
  <th>Show to Public</th>
  <th>Ticket Price</th>
  <th>Last Modified By</th>
  <th>Modified Date</th>
 </tr> 
{% for item in ticket_items %}    
<tr>    
  <td><a href={% url 'ticketing:ticket_item_edit' item.id %}> {{item.ticket_id}} </a></td>
  <td>{{ item.title | safe }}</td>
  <td>{{ item.description | safe | truncatechars:100 }}</td>
  <td>{{ item.active }}</td>
  <td>{{ item.cost }}</td>
  <td>{{ item.modified_by }}</td>
  <td>{{ item.datestamp }}</td>
<tr>    
{% endfor %}        
</table>

{% endif %}

<br>

<form method="POST" action={% url 'ticketing:ticket_items' %} enctype="multipart/form-data">
{% csrf_token %}
    <input type="hidden" name="Import" value="1">
    <input type="submit" value="Synchronize with Brown Paper Tickets"> 
</form>

{% endblock %}
