{% extends "base.tmpl" %}
{% load ticketing_filters %}
{% load staticfiles cms_tags %}
{% block head %}
      {% include "gray_grids_css.tmpl" %}
{% endblock head %}

{% block title %}
  Great Burlesque Exposition
{% endblock %}

{% block content %}

<H2 class="subtitle">Ticket Purchase Options for {{ site_name }}</H2>

Welcome!
<br>
Thanks for your interest in the Great Burlesque Expo.
Below are the ticket options available for purchase.
There are many ways you can be a part of the convention, so
please read the descriptions carefully.
<br>

<table>

{% for key, item in ticket_items.items %}
<tr><td>

</td>
</tr>

<tr valign="top">
    <th class="font_large" align="left"> {{ item.title }} </th>
    <td align=\"right\"> ${{ item.cost|floatformat:2 }} </td>
</tr>
<tr valign="top">
    <td class="font_regular" align=\"left\" colspan=2> {{ item.description | safe }} </td>
</tr>
<tr valign="top">
</tr>
    <td class="font_regular" align=\"left\" colspan=2> &nbsp </td>
<tr valign="top">
    <td class="font_regular" align="left" colspan=2>
    <a href="http://www.brownpapertickets.com/event/ID-{{ user_id }}/{{ item.ticket_id|bpt_event }}/" target="_blank">
    Purchase {{ item.title }} from Brown Paper Tickets
    </a>
    </td>
</tr>

<tr><td>
{% static_placeholder "separator" %}
</td>
</tr>
{% endfor %}
</table>


    <!-- Pricing Table Section Start -->
    <section id="pricing" class="section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2 class="section-title wow fadeInUp" data-wow-delay="0s">
                Ticket Purchase Options for {{ site_name }}</h2>
            <p class="section-subcontent wow fadeInUp" data-wow-delay="0.2s">Welcome!
            <br>
            Thanks for your interest in the Great Burlesque Expo.
            Below are the ticket options available for purchase.
            There are many ways you can be a part of the convention, so
            please read the descriptions carefully.</p>
          </div>
        </div>
{% for key, item in ticket_items.items %}
        {% cycle '<div class="row">' '' '' %}
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="pricing-table wow fadeInLeft" data-wow-delay="0.3s">
              <div class="table-icon">
                <i class="icon-user"></i>
              </div>
              <h3>{{ item.title }}</h3>
              <ul class="plan-info">
                <li><i class="icon-check"></i> Access to Booth</li>
                <li><i class="icon-minus"></i> Conference Tickets</li>
                <li><i class="icon-minus"></i> Printed Materials</li>                
              </ul>
              <div class="price">
                <h4>{{ item.cost|floatformat:2 }}</h4>
              </div>
              <div class="button-area">
                <a href="http://www.brownpapertickets.com/event/ID-{{ user_id }}/{{ item.ticket_id|bpt_event }}/" target="_blank" class="btn btn-common">Buy Now</a>
              </div>
            </div>
          </div>
        {% cycle  '' '' '</div>'%}
{% endfor %}

      </div>
    </section>
    <!-- Pricing Table Section End -->


{% endblock %}
