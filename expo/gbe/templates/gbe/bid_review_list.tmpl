{% extends 'base.html' %}
{% load staticfiles %}

{% block title %}
   Review Bids
{% endblock %}

{% block content %}
  <p class="vanilla">{{title}} </p>
  <h2 class="review-title">Bid Information</h2>

  <table class="bid-table">
    <tr class="bid-table">
      {% for header_item in header %}
      <th class="bid-table">{{ header_item }}</th>
      {% endfor %}
    </tr>
    {% for row in rows %}
      <tr class="bid-table">
              {% for value in row.bid %}
	                <td class="bid-table">      
            		{{ value }}
          		</td>	
		{% endfor %}	   
          <td class="bid-table">
	  {% if row.reviewer %}
                <b>Reviewer:</b> {{ row.review.evaluator.display_name }}<br>
                <b>Recommendation:</b> {{ row.review.get_vote_display }}<br>
                <b>Comment:</b> {{ row.review.notes }}<br>
	{% endif %}	
          </td>

            <td class="bid-table">
              <a href="{{ action1_link }}/{{ item }}">{{ action1_text }}</a>
            </td>

        
      </tr>
    {% endfor %}
  </table>
{% endblock %}

