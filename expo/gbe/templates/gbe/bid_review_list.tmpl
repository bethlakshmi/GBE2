{% extends 'base.html' %}
{% load staticfiles %}

{% block title %}
   Review Bids
{% endblock %}

{% block content %}
  <p class="vanilla">{{title}} </p>
  <h2 class="review-title">Bid Information</h2>

  <table class="bid-table">
    <tr class="bid-table">
      {% for header_item in header %}
      <th class="bid-table">{{ header_item }}</th>
      {% endfor %}
      <th class="bid-table">Review</th>
    </tr>
    {% for bid in bids %}
    <tr class="bid-table">
        {% for value in bid %}
          {% if not forloop.last  %}
            <td class="bid-table">{{ value }}</td>
          {% else %}
            <td class="bid-table">
              <a href="{{ review_path }}{{ value }}">Review</a>
            </td>
          {% endif %}
        {% endfor %}
    </tr>
    {% endfor %}
  </table>
     
{% endblock %}
