{% extends 'base.html' %}
{% load staticfiles %}

{% block title %}
   Review Bids
{% endblock %}

{% block content %}
  <p class="vanilla">{{title}} </p>
  <h2 class="review-title">Bid Information</h2>

  <table class="bid-table">
    <tr class="bid-table">
      <th class="bid-table">Bid</th>
      <th class="bid-table">Review</th>
    </tr>
    {% for bid in bids %}
    <tr class="bid-table">
      <td class="bid-table">{{ bid }}</td>
      <td class="bid-table">
        <a href="{{ review_path }}{{ bid.id }}">Review</a>
      </td>
    </tr>
    {% endfor %}
  </table>
     
{% endblock %}
