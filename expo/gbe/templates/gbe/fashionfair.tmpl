{% extends "base.tmpl" %}
{% load thumbnail %}
{% block title %}
  Great Burlesque Exposition: Fashion Fair
{% endblock %}

{% block head %}
      {% include "gray_grids_css.tmpl" %}
{% endblock head %}

{% block content %}

   <H1 class="subtitle">Shop 'til You Drop!</H1>
   <div class="body font_regular">
      {{ user_message.description|safe}}
   </div>

    <section id="content" class="section">
      <div class="container blog">
        <div class="row">
  {% for vendor in vendors %}
          <!-- Start Blog Posts -->
          <div class="col-md-6 col-xs-12">
            <!-- Start Post -->
            <div class="blog-post">
              <!-- Post feature-inner -->
              <div class="blog-image">
	        {% if vendor.img %}
	   	<a class="lightbox" href="{{vendor.img.url}}"><img src="{% thumbnail vendor.img 360x360 %}" alt=""></a>
		{% else %}
	   	<a class="lightbox" href="/static/img/defaultvendorlogo.png"><img src="/static/img/defaultvendorlogo.png" alt=""></a>
		{% endif %}
              </div>
              <!-- Post Content -->
              <div class="post-content">                  
                <h3 class="post-title">{{ vendor.b_title }}</h3>
                <div class="meta">
                  <span class="meta-part"><a href="{{vendor.website}}"><i class="icon-link"></i> Website</a></span>
                </div> 
                {{vendor.b_description | linebreaks}}
              </div>
              <!-- Post Content -->  
            </div>
            <!-- End Post -->
	  </div>
   {% endfor %}
        </div>
      </div>
    </section>
{% endblock %}
