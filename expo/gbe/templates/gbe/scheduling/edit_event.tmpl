{% extends 'base.tmpl' %}

{% block title %}
  Edit Event
{% endblock %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.js"></script>
    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="/static/styles/fonts/font-awesome.min.css">
    {{ event_form.media }}
{% endblock %}
{% block content %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse1">
        Edit Event Details
      </a>
    </h3>
  </div>
  <div id="collapse1" class="panel-collapse collapse {% if edit_open %}in{% endif %}">
  <div class="panel-body">
  <form action="" method="post" enctype="multipart/form-data">
      {% csrf_token %}
      {% include "gbe/scheduling/event_booking.tmpl" with form=event_form %}
    <div class="form-row pull-right">
      <input type="submit" class="event_wizard_button" name="pick_event" value="Save and Continue">
      <input type="submit" class="event_wizard_button" name="pick_event" value="Save and Exit">
    </div>
  </form>
  </div></div>
</div>
{% if createform %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse2">
      Manage Volunteer Opportunities</a>
    </h3>
  </div>
  <div id="collapse2" class="panel-collapse collapse {% if not edit_open %}in{% endif %}">
  <div class="panel-body">
    {% include "gbe/scheduling/manage_opps.tmpl" %}
  </div></div>
</div>
{% endif %}
{% if rehearsals %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse2">
      Manage Rehearsal Slots</a></h3>
  </div>
  <div id="collapse2" class="panel-collapse collapse">
  <div class="panel-body">
    rehearsal slots go here
  </div></div>
</div>
{% endif %}
{% endblock %}
