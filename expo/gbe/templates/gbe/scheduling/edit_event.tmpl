{% extends 'base.tmpl' %}

{% block title %}
  Edit Event
{% endblock %}

{% block content %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse1">
        Edit Event Details
      </a>
    </h3>
  </div>
  <div id="collapse1" class="panel-collapse collapse in">
  <div class="panel-body">
  <form action="" method="post" enctype="multipart/form-data">
      {% csrf_token %}
      {% include "gbe/scheduling/event_booking.tmpl" with form=event_form %}
    <div class="form-row pull-right">
      <input type="submit" class="event_wizard_button" name="pick_event" value="Update Event">
    </div>
  </form>
  </div></div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse2">
      Manage Volunteer Opportunities</a>
    </h3>
  </div>
  <div id="collapse2" class="panel-collapse collapse">
  <div class="panel-body">
    put volunter forms here
  </div></div>
</div>
{% if rehearsals %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a data-toggle="collapse" href="#collapse2">
      Manage Rehearsal Slots</a></h3>
  </div>
  <div id="collapse2" class="panel-collapse collapse">
  <div class="panel-body">
    rehearsal slots go here
  </div></div>
</div>
{% endif %}
{% endblock %}
