{% extends "base.tmpl" %}
{% load staticfiles %}
{% block title %}
  Calendar
{% endblock %}
{% block head %}
    <link rel="stylesheet" type="text/css" href="/static/styles/calendar.css">
    <link rel="stylesheet" type="text/css" href="/static/styles/fonts/font-awesome.min.css">
{% endblock %}

{% block content %}
<div style="text-align: center; padding-bottom: 10px">
{% include 'conference_list.tmpl' with conf_slug=conference.conference_slug %}
</div>
<div class="container calendar-container">
 <div class="row header1">
    <div class="col-lg-12">{{conference.conference_name}} - {{ calendar_type }} Calendar</div>
 </div>
 <div class="row header2">
    <div class="col-lg-1 backward"><a href="#" data-toggle="tooltip" title="Next Day">
    {% if prev_date %}
    <div class="col-lg-1 forward"><a href="#" data-toggle="tooltip" title="{{ prev_date }}">
      <button class="btn btn-default" type="submit" name="{{ prev_date }}" value="{{ prev_date }}">
        <i class="fa fa-step-backward" aria-hidden="true"></i>
      </button>
    </a></div>
    {% else %}
    <div class="col-lg-1 forward"><a href="#" data-toggle="tooltip" title="Not Available">
      <button class="btn btn-default">
        <i class="fa fa-step-backward" aria-hidden="true"></i>
      </button>
    </a></div>
    {% endif %}
    </a></div>
    <div class="col-lg-10">{{ this_day }}</div>
    {% if next_date %}
    <div class="col-lg-1 forward"><a href="#" data-toggle="tooltip" title="{{ next_date }}">
      <button class="btn btn-default" type="submit" name="{{ next_date }}" value="{{ next_date }}">
        <i class="fa fa-step-forward" aria-hidden="true"></i>
      </button>
    </a></div>
    {% else %}
    <div class="col-lg-1 forward"><a href="#" data-toggle="tooltip" title="Not Available">
      <button class="btn btn-default">
        <i class="fa fa-step-forward" aria-hidden="true"></i>
      </button>
    </a></div>
    {% endif %}
 </div>
 <div class="row time-row">
    <div class="col-lg-12">8:00 AM</div>
 </div>
 <div class="row event-row">
    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">thing 1</div>
    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">thing 2</div>
    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">thing 3</div>
    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">thing 4</div>
    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">thing 5</div>
 </div>

</div>
{% endblock %}