{% extends 'base.tmpl' %}

{% block title %}
  Manage Events
{% endblock %}

{% block content %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      {% if next_form %}<a data-toggle="collapse" href="#collapse1">
      Select Event Type: {{ event_type }}</a>
      {% else %}Select Event Type{% endif %}
    </h3>
  </div>
  {% if next_form %}<div id="collapse1" class="panel-collapse collapse">{% endif %}
  <div class="panel-body">
  <font color="red">
  {% if selection_form.errors %}
    <p style= "color:red"> There is an error on the form.</p>
  {% endif %}
  {{ selection_form.non_field_errors }}</font>
  <form action="{% url 'scheduling:create_event_wizard' conference_slug %}" method="get" enctype="multipart/form-data">
    <div class="form-group">
      {{ selection_form.event_type }}
        {% if selection_form.event_type.errors %}
          <font color="red">{{ selection_form.event_type.errors }}</font>
        {% endif %}
         <input type="submit" class="event_wizard_button" name="pick_event" value="Next">
    </div>
  </form>
  </div>{% if next_form %}</div>{% endif %}
</div>
{% if next_form %}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{ next_title }}</h3>
  </div>
  <div class="panel-body">
    {% block second_form %}
    {% endblock %}
  </div>
</div>
{% endif %}
{% endblock %}
