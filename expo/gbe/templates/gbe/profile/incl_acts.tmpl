	{% if acts %}
	   <span class='heading acts'>
	       <b>Act Bids</b>
	   </span><br>
	   {% for act in acts %}
	      <span class='act'> <a href = '/act/edit/{{act.id}}'> {{ act }} </a> </span> 
	      (Click to edit)<br>	      
	      {% for alert in act.alerts %}
	      	<span class='alert'> {{ alert|safe}}</span> <br>	      	 
	      {% endfor %}

	   {% endfor %}
	   <ul class="rightsidebar">
	     <li><a href='/act/create/'>Propose another act</a></li>
	   </ul>
	{% else %}
	   {{ profile.display_name }} has no acts listed.
	   
	   <ul class="rightsidebar">
	     <li><a href='/act/create/'>Propose an act</a></li>
	   </ul>
	{% endif %}
