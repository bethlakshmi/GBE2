	{% if acts %}
	   <span class='heading acts'>
	       <b>Act Bids</b>
	   </span><br>
	   {% for act in acts %}
	      <span class='act'>
	       {% if act.submitted %}<a href = '{% url 'gbe:act_view' act.id %}'> {{ act }} </a>(Click to view)
	       	  {% for value, state in acceptance_states %}
		     {% if value = act.accepted %}
			- {{state}}
		     {%endif%}
		  {% endfor %}
	       <br>
	       {% elif act.performer.contact = profile %}<a href = '{% url 'gbe:act_edit' act.id%}'> {{ act }} </a>(Click to edit)<br>
	       {% endif %}

	      </span> 
	         
	      {% for alert in act.alerts %}
	      	<span class='alert'> {{ alert|safe}}</span> <br>	      	 
	      {% endfor %}

	   {% endfor %}
	   <ul class="rightsidebar">
	     <li><a href='{% url 'gbe:act_create' %}'>Propose another act</a></li>
	   </ul>
	{% else %}
	   {{ profile.display_name }} has no acts listed.
	   
	   <ul class="rightsidebar">
	     <li><a href='{% url 'gbe:act_create' %}'>Propose an act</a></li>
	   </ul>
	{% endif %}
