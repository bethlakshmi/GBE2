{% extends 'base.tmpl' %}
{% load staticfiles %}

{% block title %}
   Manage Users
{% endblock %}

{% block head %}
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="/static/styles/fonts/simple-line-icons.css">
{% endblock %}
{% block content %}
  <p class="vanilla">{{title}} </p>
  <h2 class="review-title">Review Class Interest</h2>

  <p>This list includes all <b>scheduled</b> classes and provides a count of how many
  logged in users have shown interest in the class.  Interest does not reflect a
  firm commitment, nor does it imply anything about ticket purchase.</p>

  <div>Press the arrows to sort on a column.  To sort on an additional sub-order,
  press "Shift" to sort a secondary column.</div>
  <br/>
  <div>
    Toggle column(s):
    {% for header_item in header %}
      <a class="toggle-vis" data-column="{{ forloop.counter0 }}">
	{{ header_item }}</a>{% if not forloop.last %} - {% endif %}
    {% endfor %}
  </div>
  <br/>
  <table id="interest_review" class="order-column" cellspacing="0" width="100%">
    <thead>
    <tr class="bid-table">
      {% for header_item in header %}
      <th class="bid-table">{{ header_item }}</th>
      {% endfor %}
    </tr>
    </thead>
    <tfoot>
    <tr class="bid-table">
      {% for header_item in header %}
      <th class="bid-table">{{ header_item }}</th>
      {% endfor %}
    </tfoot>
    <tbody>
    {% for class in classes %}
      <tr class="bid-table">
        <td class="bid-table">{{ class.title }}</td>	
        <td class="bid-table">{% for teacher in class.teachers %}
	  {{ teacher.name }}
	{% endfor %}</td>	
        <td class="bid-table">{{ class.location }}</td>	
        <td class="bid-table">{{ class.maximum_enrollment }}</td>	
        <td class="bid-table">{{ class.type }}</td>	
        <td class="bid-table">{{ class.interested|length }}</td>	
        <td class="bid-table">
	  <div class="btn-group" role="group" aria-label="...">
	   <a href="{{ class.detail_link }}" data-toggle="tooltip" title="View Event Description">
            <button type="button" class="btn btn-default btn-sm">
	        <i class="icon-eye"></i>
	    </button></a>
	   <a href="#" data-toggle="modal" title="View Interested Email Addresses" data-target="#{{class.eventitem_id}}_interest_modal">
            <button type="button" class="btn btn-default btn-sm">
	        <i class="icon-envelope"></i>
	    </button></a>
        </div>
    <div class="modal fade" id="{{class.eventitem_id}}_interest_modal" role="dialog">
      <div class="modal-dialog"><div class="modal-content"><div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{class.e_title}} - Interested Attendee Contact List</h4>
        </div>
      <div class="modal-body">
	<div class="row"><div class="col-xs-12">
	{% for person in class.interested %}
	  {{ person.user.profile.display_name }} &lt;{{person.user.email}}&gt;;</br>
	{% endfor %}
        </div></div>
	<div class="row"><div class="col-xs-12">
	  <br><b>Want more attendees?</b>  Advertise early and often!  Let your fans know you
	  can be found here, at the Great Burlesque Expo!
	    <a href="{% url 'scheduling:detail_view' class.eventitem_id %}">
	      http://{{request.get_host}}{% url 'scheduling:detail_view' class.eventitem_id %}</a>
        </div></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div></div></div>
	</td>
      </tr>{% endfor %}
    </tbody>
  </table>
  <script>
  $(document).ready(function() {
    var table = $('#interest_review').DataTable();

    $('a.toggle-vis').on( 'click', function (e) {
        e.preventDefault();

        // Get the column API object
        var column = table.column( $(this).attr('data-column') );

        // Toggle the visibility
        column.visible( ! column.visible() );
    } );
  } );
  </script>
{% endblock %}

