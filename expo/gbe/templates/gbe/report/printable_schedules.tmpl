{% extends 'base_print.tmpl' %}
{% load staticfiles %}

{% block title %}
   Printable Schedules
{% endblock %}

{% block content %}

{% include "conference_picker.tmpl" %}

{% for schedule in schedules %}
{% if schedule.bookings %}  
{% include "gbe/email/schedule_letter_html.tmpl" with badge_name=schedule.person.get_badge_name bookings=schedule.bookings %}
{% endif %}
{% if schedule.checklist_items %}
  <h3>{{ schedule.person.get_badge_name }}'s GBE Package Checklist</h3>
  <ul>
  {% for criteria in schedule.checklist_items %}
    {% if criteria.ticket %}
    <li>Purchased {{criteria.count}} of {{criteria.ticket}}, for each item include:</li>
    {% endif %}
    {% if criteria.role %}
    <li>Thank you for being a {{criteria.role}}, your package includes:</li>
    {% endif %}
    <ul>
      {% for item in criteria.items%}
        <li>{{item}}</li>
      {%endfor%}
    </ul>
  {% endfor %}
  </ul>
{% endif %}
-----BREAK-----
{% endfor %}
{% endblock %}

