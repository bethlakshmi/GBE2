{% extends "base.html" %}
{% load ticketing_filters %}
{% block title %}
  Great Burlesque Exposition: {{eventitem.event.sched_payload.title}}
{% endblock %}

{% block content %}
   
   <H1 class="sched_detail_title">{{eventitem.event.sched_payload.title}}</H1>

   <div class="sched_block">
      <div class="sched_times">
	  {% for sched_event in eventitem.scheduled_events %}
	  <label class="sched_detail">Time:</label> {{ sched_event.start_time}}<br>
	    {% for location in sched_event.location %}
	  <label class="sched_detail">Location:  </label>{{ location }}<br>
	    {% endfor %}
	  <br>
	  {% endfor %}
      </div>
      <div class="sched_length">
	 <label class="sched_detail">Length:</label>  {{eventitem.event.duration}} (mm:ss)
      </div>
      <div class="sched_details"></div>
 	 {% for name, value in eventitem.event.sched_payload.details.items %}
         <label class="sched_detail">{{name}}:</label> {{value}}<br>
	 {% endfor %}
      </div>
      <div class="sched_desc">
	 {{eventitem.event.sched_payload.description}}
      </div>
      {% if show_tickets %}
      <div class="tickets">
	<br>
	<b>Buy any of these tickets to get into this great event!</b><br>
	<ul class="ticket_list"></ul>
	{% for ticket in eventitem.event.get_tickets %}
	  <li class="ticket_list_item">
	    <span class="ticket_name">{{ ticket.title }}</span> - 
	    <a href="http://www.brownpapertickets.com/event/ID-{{ user_id }}/{{ ticket.ticket_id|bpt_event }}/" target="_blank" class="ticket_link">
            Buy it now!
            </a>
	  </li>
	{% endfor %}
	</ul>
      </div>
      {% endif %}
   </div>
 

{% endblock %}
