{% extends "base.tmpl" %}
{% load staticfiles %}
{% block title %}
  Great Burlesque Exposition: {{eventitem.event.payload.title}}
{% endblock %}

{% block head %}
      {% include "gray_grids_css.tmpl" %}
{% endblock head %}

{% block content %}
{% if tickets %}
  <div class="sched_block font_regular">
  {% include "ticket_link.tmpl" %}
  </div>
{% endif %}  
    <H1 class="sched_detail_title">{{eventitem.event.payload.title}}</H1>
    <div class="sched_block font_regular">
      <div class="sched_desc">
	{{eventitem.event.payload.description |safe}}
        <div class="sched_details">
        {% for name, value in eventitem.event.payload.details.items %}
        <label class="sched_detail">
	{% autoescape off %}
	  {% for label_name, label_value in eventitem.labels.items%}
	       {% if name == label_name %}
	          {{label_value}}:
	       {% endif %}
	  {% empty %}
	      {{value |safe}}:
	  {% endfor %}
	</label> {{value |safe }}<br>
	{% endautoescape %}
        {% endfor %}

        </div>
      </div>
      {% if eventitem.scheduled_events %}
      <div class="sched_times">
	  {% for sched_event in eventitem.scheduled_events %}
	    <label class="sched_detail">Time:</label>  {{ sched_event.start_time|date:_("DATETIME_FORMAT")}} - {{ sched_event.end_time|date:_("TIME_FORMAT")}}<br>
	      <label class="sched_detail">Location:</label>  {{ sched_event.location }}<br>
            {% if not forloop.last %}
	    <br>
	    {%endif%}
	  {% endfor %}
      </div>
      {% endif %}

    </div>
    {% if eventitem.bio_grid_list %}
      {% include "people_gallery.tmpl" %}
      <table class="vtable" align=center>
      <tr  class="vrow"><th colspan="3" class="vheader">
        <div class="vheadertext font_large"><p>Check out our fabulous Performers!</p></div>
      </th></tr>
      {% for bio in eventitem.bio_grid_list %}
	{% cycle '<tr class="vrow"><td class="vendorff">' '<td class="vendorff">' '<td class="vendorff">' %}
	    <div class="vname">
	      {{bio.name}}
	    </div>
            <span class="perfhover">
	    <div class="vimg font_regular">
	      <a href="{{bio.homepage}}">
	   	{% if bio.promo_mini %}
	   	<img src="{{MEDIA_URL}}{{bio.promo_mini}}" class="vimage">
		{% else %}
		<img src="{{STATIC_URL}}/img/defaultperfpromo.png" class="vimage">
		{% endif %}
	      </a><br>
	      <span>
               <div class="vname" ><b>{{bio.name}}</b></div><br>
               <div align=left>

	   	  {% if bio.promo_image %}
		  <div style="float:right">
                  <a href="{{MEDIA_URL}}{{bio.promo_image}}">
		    <img src="{{MEDIA_URL}}{{bio.promo_mini}}" alt="Photo" width=200 style="float:right">
		  </a></div><BR>
		  {%endif%}
                  <div class="vdesc">
	            {{bio.bio | linebreaksbr}}
	          </div>
                  {% if bio.homepage %}
		  <br>
		  <div style="float:left">
		  <b><a href="{{bio.homepage}}">Website</a><b></div>

	          {% endif %}

	      </span>
	    </div>
	    </span>

	{% cycle '</td>' '</td>' '</td></tr>' %}
	
      {% endfor %} 
      </table>
    {% elif eventitem.event.roles %}
    <div class="bio_block font_regular">
      {% for worker in eventitem.event.roles %}
      {% ifchanged worker.workeritem %}
      <div class="bio_words">
	{%if worker.role == "Staff Lead"%}
	  <h2 class="bio_name subtitle">{{worker.role}} - {{worker.workeritem}}</h2>
        {%else%}
          <h2 class="subtitle">About the {{worker.role}} - {{worker.workeritem.name}}</h2>
          {{worker.workeritem.bio |linebreaksbr}}
	{%endif%}
      <br><br>
      </div>
        {% if worker.workeritem.promo_mini %}
          <div class="bio_name bio_image_block">
          <img src="{{MEDIA_URL}}{{worker.workeritem.promo_mini}}" class="sched_bio_image">
          </div>
        {% endif %}
      {%endifchanged%}
      {% endfor %}
    </div>
    {% elif eventitem.event.bios %}
    <div class="bio_block font_regular">
      {% for bio in eventitem.event.bios %}
      <div class="bio_words">
        <h2 class="bio_name subtitle">About {{bio.name}}</h2>
        {{bio.bio |linebreaksbr}}
        <br><br>
	
      </div>

       {% if bio.promo_mini %}
          <div class="bio_image_block">
            <img src="{{MEDIA_URL}}{{bio.promo_mini}}" class="sched_bio_image">
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}


  <div style="height: 300px">&nbsp;</div>
{% endblock %}
